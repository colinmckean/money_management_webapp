<h1>Edit Transaction</h1>
<div class="container">
  <form action="/transactions/<%= @transaction.id %>" method="post">
    <div class="form">
      <span class="form-item">Tag</span>
      <select class="form-field" name="tag_id">
        <% for tag in @tags %>
        <option value="<%= tag.id%>"><%= tag.tag_name%></option>
        <% end %>
      </select>
    </div>
    <div class="form">
      <span class="form-item">Merchant</span>
      <select class="form-field" name="merchant_id">
        <% for merchant in @merchants %>
        <option value="<%= merchant.id%>"><%= merchant.merchant_name%></option>
        <% end %>
      </select>
    </div>
    <div class="form">
      <span class="form-item">Amount</span>
      <input class="form-field" name="transaction_amount" value="<%= @transaction.transaction_amount %>">
    </div>
    <div class="form">
     <span class="form-item">Details</span>
     <input class="form-field" name="item_description" value="<%= @transaction.item_description %>">
   </div>
   <button class="button update" type='submit' value="Update">UPDATE</button>
 </form>
